<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.niandrasoft.footballquiz">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.DeviceDefault.NoActionBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" />
        <activity android:name=".AboutGameActivity"
            android:label="About The Game" />
        <activity android:name=".MainMenuActivity"
            android:label="Main Menu" />
        <activity android:name=".HelpActivity"
            android:label="Help" />
        <activity android:name=".NewGameActivity"
            android:label="New Game" />
        <activity android:name=".RatingsActivity"
            android:label="Ratings" />
        <activity android:name=".RulesActivity"
            android:label="Rules" />
        <activity android:name=".SettingsActivity"
            android:label="Settings" />
        <activity android:name=".BasicActivity"
            android:label="Basic" />
        <activity android:name=".AdvancedActivity"
            android:label="Advanced" />
        <activity android:name=".MediumActivity"
            android:label="Medium" />
        <activity android:name=".GamePlayActivity"
            android:label="Game Play" />

        <service
            android:name=".SoundService"
            android:enabled="true"
            android:exported="true"/>
    </application>

</manifest>
