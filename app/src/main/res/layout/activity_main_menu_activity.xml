<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.niandrasoft.footballquiz.MainMenuActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Game"
            android:id="@+id/btnNewGame"
            android:layout_row="1"
            android:layout_column="0"
            android:textColor="#E3F2FD"
            android:background="#5C6BC0"
            android:onClick="onClickNewGame"
            android:layout_gravity="center_horizontal"
            android:textSize="25dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:id="@+id/btnSettings"
            android:layout_row="2"
            android:layout_column="0"
            android:backgroundTint="#5C6BC0"
            android:textColor="#E3F2FD"
            android:onClick="onClickSettings"
            android:layout_below="@+id/btnNewGame"
            android:layout_alignStart="@+id/btnNewGame"
            android:layout_marginTop="42dp"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ratings"
            android:id="@+id/btnRatings"
            android:layout_row="3"
            android:layout_column="0"
            android:backgroundTint="#5C6BC0"
            android:textColor="#E3F2FD"
            android:onClick="onClickRatings"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/btnSettings"
            android:layout_alignStart="@+id/btnSettings"
            android:layout_marginTop="42dp"
            android:textSize="25dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help"
            android:id="@+id/btnHelp"
            android:layout_row="4"
            android:layout_column="0"
            android:backgroundTint="#5C6BC0"
            android:textColor="#E3F2FD"
            android:onClick="onClickHelp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:textSize="25dp"
            android:layout_below="@+id/btnRatings"
            android:layout_alignEnd="@+id/btnNewGame" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:id="@+id/btnExit"
            android:layout_row="10"
            android:layout_column="0"
            android:backgroundTint="#5C6BC0"
            android:textColor="#E3F2FD"
            android:onClick="onClickExit"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/btnSettings"
            android:textSize="25dp" />

    </LinearLayout>
</RelativeLayout>
