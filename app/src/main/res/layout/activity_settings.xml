<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.niandrasoft.footballquiz.SettingsActivity">

   <GridLayout
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:columnCount="1"
       android:rowCount="4"
       android:layout_marginTop="50dp">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="SOUND"
        android:id="@+id/button5"
        android:background="#5C6BC0"
        android:textColor="#E3F2FD"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_row="0"
        android:layout_column="0"/>


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Rate this app"
        android:id="@+id/btnRateApp"
        android:background="#5C6BC0"
        android:layout_gravity="center_horizontal"
        android:textColor="#E3F2FD"
        android:textSize="25dp"
        android:layout_below="@+id/button5"
        android:layout_alignEnd="@+id/btnMoreApps"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="More free apps"
        android:id="@+id/btnMoreApps"
        android:onClick="onClickMoreApps"
        android:background="#5C6BC0"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:textColor="#E3F2FD"
        android:textSize="25dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginTop="20dp" />



    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/button2"
        android:onClick="onClickBack"
        android:background="#5C6BC0"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#E3F2FD"
        android:textSize="25dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_marginTop="200dp" />

   </GridLayout>

</RelativeLayout>
